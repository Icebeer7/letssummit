{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "paths": {
      "@state/*": ["./src/state/*"],
      "@store/*": ["./src/store/*"],
      "@theme/*": ["./src/theme/*"],
      "@utils/*": ["./src/utils/*"],
      "@components/*": ["./components/*"],
      "@constants/*": ["./constants/*"],
      "@assets/*": ["./assets/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "**/*.d.ts"]
}
